{
  "compilerOptions": {
    "target": "es5",
    "lib": ["es5"],
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": false,
    "removeComments": false,
    "newLine": "LF",
    "module": "commonjs",
    "outDir": "./game/script",
    "noUnusedLocals": true,
    "allowUmdGlobalAccess": true
  },
  "files": [
    "node_modules/@akashic/akashic-engine/index.runtime.d.ts"
  ],
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "compileOnSave": true
}
